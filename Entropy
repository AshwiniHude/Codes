k = 10;   
n = 100;   
x = ceil(k*rand(1,n));  
y = ceil(k*rand(1,n)); 
function z = entropy(x)  
n = numel(x);  
[u,~,x] = unique(x);  
k = numel(u);  
idx = 1:n;  
Mx = sparse(idx,x,1,n,k,n);  
Px = nonzeros(mean(Mx,1));  
Hx = -dot(Px,log2(Px));  
z = max(0,Hx);  
end  
Hx = entropy(x) 
Hy = entropy(y) 
